   <option id="RegistrationCode"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           argname="code"
           hidden="yes">
    <name>rCode</name>
    <comment>The License Registration Code.</comment>
   </option>
   <option id="RegisteredEmail"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           argname="email"
           hidden="yes">
    <name>rEmail</name>
    <comment>The Registered Email.</comment>
   </option>
   <option id="RegisteredUser"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           argname="name"
           hidden="yes">
    <name>rUser</name>
    <comment>The Registered User.</comment>
   </option>
 </options>
</cloxx>
