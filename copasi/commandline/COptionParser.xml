   <option id="Validate"
           type="flag"
           mandatory="no"
           strict="yes"
           location="both"
           default="false"
           hidden="no">
     <name>validate</name>
     <comment>
       Validate the given input file (COPASI or SBML).
     </comment>
   </option>
   <option id="Save"
           type="string"
           mandatory="no"
           strict="yes"
           location="both"
           argname="file"
           hidden="no">
    <name>save</name>
    <name>s</name>
    <comment>
      The file the model is saved to after work. 
    </comment>
   </option>
   <option id="ImportSBML"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           argname="file"
           hidden="no">
    <name>importSBML</name>
    <name>i</name>
    <comment>A SBML file to import.</comment>
   </option>
   <option id="ExportSBML"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           argname="file"
           hidden="no">
    <name>exportSBML</name>
    <name>e</name>
    <comment>The SBML file to export.</comment>
   </option>
   <option id="SBMLSchema"
           type="enum"
           mandatory="no"
           strict="yes"
           location="commandline"
           hidden="no"
           argname="schema"
           default="L2V3">
     <enum id="L1V1" name="L1V1" />
     <enum id="L1V2" name="L1V2" />
     <enum id="L2V1" name="L2V1" />
     <enum id="L2V2" name="L2V2" />
     <enum id="L2V3" name="L2V3" />
     <name>SBMLSchema</name>
     <comment>The Schema of the SBML file to export.</comment>
   </option>
   <option id="NewExportSBML"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           hidden="no">
    <name>newExportSBML</name>
    <comment>The SBML file to export.</comment>
   </option>
   <option id="ExportBerkeleyMadonna"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           argname="file"
           hidden="no">
    <name>exportBerkeleyMadonna</name>
    <comment>The Berkeley Madonna file to export.</comment>
   </option>
   <option id="ExportC"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           argname="file"
           hidden="no">
    <name>exportC</name>
    <comment>The C code file to export.</comment>
   </option>
   <option id="ExportXPPAUT"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           argname="file"
           hidden="no">
    <name>exportXPPAUT</name>
    <comment>The XPPAUT file to export.</comment>
   </option>
