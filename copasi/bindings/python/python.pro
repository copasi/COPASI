                   nm -g $${RAPTOR_PATH}/lib/libraptor.a | grep "^[0-9]" | cut -d\" \" -f3  >> unexported_symbols.list;
                   
  !isEmpty(PYTHON_PATH){
    LIBS += $$system($${PYTHON_PATH}/bin/python-config --ldflags)
    QMAKE_CXXFLAGS *= $$system($${PYTHON_PATH}/bin/python-config --includes)
  } else {
