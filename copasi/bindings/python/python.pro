    QMAKE_CXXFLAGS *= $$system(python-config --includes)
  }

  !isEmpty(PYTHON_LIB_PATH){
    LIBS *= -L$${PYTHON_LIB_PATH}
  }

  !isEmpty(PYTHON_INCLUDE_PATH){
    INCLUDEPATH *= $${PYTHON_INCLUDE_PATH}
  }

 QMAKE_POST_LINK += ln -sf libCopasiPython.so _COPASI.so
